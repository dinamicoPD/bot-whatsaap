<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mensajes Entrantes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0">ğŸ“¨ Mensajes Entrantes</h1>
      <a href="/" class="btn btn-secondary">â† Panel Principal</a>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mensajes Recientes</h5>
            <button id="refreshBtn" class="btn btn-primary btn-sm">ğŸ”„ Actualizar</button>
          </div>
          <div class="card-body">
            <div id="mensajesContainer">
              <% if (mensajes && mensajes.length > 0) { %>
                <% mensajes.forEach(mensaje => { %>
                  <div class="card mb-3 <%= mensaje.respondido ? 'border-success' : 'border-warning' %>">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h6 class="card-title mb-1">
                            ğŸ‘¤ <%= mensaje.usuario %>
                            <small class="text-muted ms-2">
                              <%= new Date(mensaje.timestamp).toLocaleString('es-ES') %>
                            </small>
                          </h6>
                          <p class="card-text mb-2"><%= mensaje.mensaje %></p>
                        </div>
                        <span class="badge <%= mensaje.respondido ? 'bg-success' : 'bg-warning text-dark' %>">
                          <%= mensaje.respondido ? 'âœ… Respondido' : 'â³ Pendiente' %>
                        </span>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="text-center text-muted py-4">
                  <h4>ğŸ“­ No hay mensajes</h4>
                  <p>Los mensajes entrantes aparecerÃ¡n aquÃ­ automÃ¡ticamente.</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // FunciÃ³n para actualizar mensajes
    function actualizarMensajes() {
      $.get('/api/mensajes', function(data) {
        let html = '';

        if (data.length > 0) {
          data.forEach(mensaje => {
            const fecha = new Date(mensaje.timestamp).toLocaleString('es-ES');
            const claseBorde = mensaje.respondido ? 'border-success' : 'border-warning';
            const badgeClass = mensaje.respondido ? 'bg-success' : 'bg-warning text-dark';
            const badgeText = mensaje.respondido ? 'âœ… Respondido' : 'â³ Pendiente';

            html += `
              <div class="card mb-3 ${claseBorde}">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h6 class="card-title mb-1">
                        ğŸ‘¤ ${mensaje.usuario}
                        <small class="text-muted ms-2">${fecha}</small>
                      </h6>
                      <p class="card-text mb-2">${mensaje.mensaje}</p>
                    </div>
                    <span class="badge ${badgeClass}">${badgeText}</span>
                  </div>
                </div>
              </div>
            `;
          });
        } else {
          html = `
            <div class="text-center text-muted py-4">
              <h4>ğŸ“­ No hay mensajes</h4>
              <p>Los mensajes entrantes aparecerÃ¡n aquÃ­ automÃ¡ticamente.</p>
            </div>
          `;
        }

        $('#mensajesContainer').html(html);
      });
    }

    // Actualizar automÃ¡ticamente cada 5 segundos
    setInterval(actualizarMensajes, 5000);

    // BotÃ³n de actualizar manual
    $('#refreshBtn').click(function() {
      actualizarMensajes();
    });
  </script>
</body>
</html>